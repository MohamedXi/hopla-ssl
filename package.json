{
  "name": "hopla-ssl",
  "version": "1.0.0",
  "description": "Simple tool to generate and install SSL certificates in local JavaScript projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "hopla-ssl": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run test && npm run lint:fix && npm run format",
    "preversion": "npm run lint:fix && npm run format",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "postinstall": "chmod +x ./dist/index.js"
  },
  "keywords": [
    "ssl",
    "certificate",
    "https",
    "local",
    "development",
    "react",
    "vue",
    "angular",
    "nextjs",
    "devtools"
  ],
  "author": "Ismael Mohamed <mohamed-ismael@outlook.fr>",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MohamedXi/hopla-ssl"
  },
  "bugs": {
    "url": "https://github.com/MohamedXi/hopla-ssl/issues"
  },
  "homepage": "https://github.com/MohamedXi/hopla-ssl#readme",
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "fs-extra": "^11.3.0",
    "inquirer": "^12.8.0",
    "mkcert": "^3.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "typescript": "^5.8.3"
  }
}
